{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "esnext",
    "rootDir": "src",
    "moduleResolution": "Node",
    "outDir": "public/scripts",
    "sourceRoot": "src",
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*"],
}
